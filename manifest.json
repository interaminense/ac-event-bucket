{
  "manifest_version": 3,
  "name": "AC Event Bucket",
  "version": "1.0",
  "icons": {
    "16": "assets/green.png"
  },
  "permissions": ["tabs", "storage", "webRequest"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["js/content-script.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "action": {
    "default_title": "AC Event Bucket",
    "default_popup": "html/popup.html"
  }
}
